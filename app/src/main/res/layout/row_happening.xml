<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#022935">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Event Title"/>

        </RelativeLayout>





        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#033748">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivHappeningIcon"
                android:layout_height="65sp"
                android:layout_margin="15dp"
                android:layout_width="65sp"
                android:src="@drawable/mic_red" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/ivHappeningIcon"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tvType"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Type"
                    android:textColor="@color/flatRed"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="Event Description Goes Here And Can be This Long In Length" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    android:text="Novemeber 12, 2016 8:00pm"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"/>


            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>
